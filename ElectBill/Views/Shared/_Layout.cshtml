<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" type="image/x-icon" href="~/Content/Cust_img/fav_gif.gif">
    @*   @Styles.Render("~/Content/css")*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
    @* <link href="~/Content/Cust_css/Bootstrap.min.css" rel="stylesheet" />*@


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            width: 80%;
            margin: 0px auto;
        }

        .addbtn {
            display: inline-block;
            outline: none;
            cursor: pointer;
            border-radius: 3px;
            font-size: 14px;
            font-weight: 500;
            line-height: 16px;
            padding: 8px 9px;
            height: 32px;
            min-height: 32px;
            border: none;
            color: #fff;
            background-color: rgb(88, 101, 242);
            transition: background-color .17s ease, color .17s ease;
            width: fit-content !important;
        }
      .addbtn:hover {
                background-color: rgb(71, 82, 196);
            }
    </style>
    <link href="~/Content/Cust_css/navbar.css" rel="stylesheet" />
</head>
<body>
    <header>
        @*@{
            var isCreateBillView = ViewContext.RouteData.Values["controller"].ToString().Equals("EBill") &&
                                    ViewContext.RouteData.Values["action"].ToString().Equals("CreateBill");
        }
        @{
            var isViewBillView = ViewContext.RouteData.Values["controller"].ToString().Equals("EBill") &&
                                    ViewContext.RouteData.Values["action"].ToString().Equals("Index");
        }*@
        <nav class="nav">
            <ul class="menu">

                <li class="logo"><a href="/">Generate Bill</a></li>
                @if (Request.Cookies["Email"] != null && TempData["logindata"] != null && Request.Cookies["Email"].Value == TempData["logindata"].ToString())
                {
                  //  if (!isViewBillView) { 
                    <li class="item">
                        @Html.ActionLink("ViewAllCustmer", "DetailInRow", "Home")
                    </li>
                   // }
                   //  if (!isCreateBillView)
                   // {
                        <li class="item">
                            @Html.ActionLink("Create Bill", "CreateBill", "Home")
                        </li>
                   // }
                    <li class="item">
                        @Html.ActionLink("Logout", "Logout", "Home")
                    </li>
                }
                else
                {
                    <li class="item">
                        @Html.ActionLink("Login", "Login", "Home")
                   </li>
                }

                @* <li class="item button"><a href="#">Log In</a></li>*@
                @*<li class="item button secondary"><a href="#">Sign Up</a></li>*@
                <li class="toggle"><span class="bars"></span></li>
            </ul>
        </nav>
    </header>
    <div>
       
        @RenderBody()

        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>
   
    <script>
        $(function () {
            $(".toggle").on("click", function () {
                if ($(".item").hasClass("active")) {
                    $(".item").removeClass("active");
                } else {
                    $(".item").addClass("active");
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
