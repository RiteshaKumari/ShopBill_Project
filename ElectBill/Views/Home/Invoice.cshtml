<style>
    .cont {
        /*box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);*/
        /*border:1px solid black;*/
        width: 100%;
        margin: 0px;
       
    }
    body > .skiptranslate, .goog-logo-link, .gskiptranslate, .goog-te-gadget span, .goog-te-banner-frame, #goog-gt-tt, .goog-te-balloon-frame, div#goog-gt- {
        display: none !important;
    }

    .goog-te-gadget {
        color: transparent !important;
        font-size: 0px;
    }

    .goog-text-highlight {
        background: none !important;
        box-shadow: none !important;
    }

    #google_translate_element select {
        background: #2b1a12;
        color: #fff4e4;
        border: none;
        font-weight: bold;
        border-radius: 3px;
        padding: 8px 12px;
    }

    .cont.translate {
        padding: 0px 70px;
    }

    .box {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .box div {
            flex: 1;
            margin: 10px;
        }

        .box img {
            margin-left: auto;
            margin-right: auto;
            display: block;
        }

    .content-table {
        width: 100%;
        border-collapse: collapse;
    }

        .content-table th, .content-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .content-table th {
            background-color: #009879;
            color: #ffffff;
        }

        .content-table .active-row {
            background-color: #f3f3f3;
        }

    .totamt {
        display: flex;
        justify-content: flex-end;
        padding-right: 40px;
        margin-top: 20px;
        font-weight: bold;
    }
    .body {
        background-color: #fff4e4;
        color: #2b1a12;
        top: 0 !important;
       
       
        line-height: 1.3;
    }
</style>
 
<div class="body">
    @*<div id='google_translate_element'></div>*@
    <div class="cont translate">
        <h1>Customer Bill</h1>

        <div class="box">
            <div>
                <h3>
                    Customer Detail
                </h3><br />
                <p>CustomerId : @Model.cust_Id</p>
                <p> Name : @Model.cust_Name</p>
                <p> Mobile : @Model.cust_Mobile</p>
                <p> Date : @Model.Date</p>

            </div>
            <div>
                <img src="@ViewBag.QRCodeImage" style="height:150px;width:150px;" />
            </div>
            <div>
                <h4>
                    About us:
                </h4>

                <pre style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
      GroseryShop , Patna, Bihar
      Phone  :  1234567890
      email   :  abc@gmail.com 
    </pre>
            </div>
        </div>

        <table class="content-table">
            <thead style=" background-color: #009879 !important;">

                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="active-row">
                        <td>@item.Item_Id</td>
                        <td>@item.Item_Name</td>
                        <td>@item.Item_Price</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="totamt">
            <p>Total Amount: @Model.totalPrice</p>
        </div>
        <small class="notranslate" style="display: flex; justify-content: center; align-items: center;font-weight:600; ">
            2024 Made By RiteshaKumari&nbsp;&nbsp;
            <button onclick="printfun()" class="addbtn printbtn">
                Print
            </button>
        </small>


    </div>

</div>



<script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
<script>
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',
            autoDisplay: 'true',
            includedLanguages: 'hi,en,bn,ar,ja,iw', // <- remove this line to show all language
            layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL
        }, 'google_translate_element');
    }
</script>
<script>
    function printfun() {
        $(".printbtn").hide();
        //var body = document.querySelector("body").innerHTML;
        //var data = document.querySelector(".cont").innerHTML;
        //document.querySelector("body").innerHTML = data;
        window.print();
        //document.querySelector("body").innerHTML = body;
      }
</script>